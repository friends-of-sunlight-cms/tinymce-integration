{
  "$schema": "../../../system/schema/extend.json",
  "name": "TinyMCE Editor",
  "description": "Advanced WYSWIYG HTML editor",
  "version": "0.9.2",
  "environment": {
    "system": "^8.0"
  },
  "dependencies": {
    "fosc-lib": ">=0.9.2"
  },
  "authors": [
    {"name": "Friends of Sunlight CMS", "url": "https://github.com/friends-of-sunlight-cms/"}
  ],
  "class": "TinymcePlugin",
  "config_defaults": {
    "editor_mode": "basic",
    "mode_by_priv": false,
    "priv_min_limited": 1,
    "priv_max_limited": 500,
    "priv_min_basic": 600,
    "priv_max_basic": 1000,
    "priv_min_advanced": 10000,
    "priv_max_advanced": 10001,
    "filemanager": false,
    "editor_in_boxes": false,
    "editor_in_perex": true
  },
  "actions": {
    "config": "ConfigAction"
  },
  "langs": {
    "tinymce": "lang"
  },
  "autoload": {
    "psr-4": {
      "Wysiwyg\\": "Component"
    }
  },
  "events.admin": [
    {"event": "admin.init", "method": "onAdminInit"},
    {"event": "admin.editor", "method": "onAdminEditor", "priority": 10},
    {"event": "admin.head", "method": "onAdminHead", "group": "tinymce"},
    {"event": "core.javascript", "method": "onCoreJavascript", "group": "tinymce"}
  ]
}